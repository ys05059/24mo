<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >
        <EditText
            android:id="@+id/wine_name_search"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:background="@drawable/button_gray"
            android:gravity="center_vertical"
            android:hint="      와인 이름을 검색하세요"
            android:textSize="26dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textColor="@color/grey_font"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >

        <Button
            android:id="@+id/priceRange"
            android:layout_width="357dp"
            android:layout_height="100dp"
            android:background="@drawable/button_less_round_white"
            android:elevation="20dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="center_vertical"
            android:text="     가격대"
            android:textColor="@color/grey_font"
            android:textSize="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/wineKind"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="@drawable/button_less_round_white"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="center_horizontal"
            android:text="\n종류"
            android:textColor="@color/grey_font"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/wineCountry"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="@drawable/button_less_round_white"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="center_horizontal"
            android:text="\n생산지"
            android:textColor="@color/grey_font"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/wineAlcohol"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="@drawable/button_less_round_white"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="center_horizontal"
            android:text="\n도수"
            android:textColor="@color/grey_font"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            />
        <Button
            android:id="@+id/wineFood"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="@drawable/button_less_round_white"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="center_horizontal"
            android:text="\n음식"
            android:textColor="@color/grey_font"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        >

        <Button
            android:id="@+id/wineOthers"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:background="@drawable/button_less_round_white"
            android:elevation="20dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="center_vertical"
            android:text="   당도/산도/바디/타닌"
            android:textColor="@color/grey_font"
            android:textSize="25dp"
            android:layout_margin="10dp">

        </Button>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="17dp"
        >

        <Fragment.CustomBottomButton
            android:id="@+id/basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customText="0"
            app:customTextColor="@color/wine"
            />

        <Button
            android:id="@+id/searchBtn"
            android:layout_marginLeft="10dp"
            android:layout_width="220dp"
            android:layout_height="90dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/lineseed_bd"
            android:gravity="center"
            android:padding="0dp"
            android:text="검색"
            android:textColor="@color/white"
            android:textSize="31dp"
            />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/wine"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first_tag"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_round_white"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="center"
            android:text=" "
            android:textColor="@color/wine"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/second_tag"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_round_white"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="center"
            android:text=" "
            android:textColor="@color/wine"
            android:textSize="17dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommend_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Fragment.CustomBottomButton
            android:id="@+id/basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:customText=""
            app:customTextColor="@color/wine"
            />

        <Button
            android:id="@+id/pay"
            android:layout_marginLeft="10dp"
            android:layout_width="188dp"
            android:layout_height="74dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/lineseed_bd"
            android:gravity="center"
            android:padding="0dp"
            android:text="결제하기"
            android:textColor="@color/white"
            android:textSize="31dp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.a24mo.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".InformationFragment"
        android:background="#990C14">

        <TextView
            android:id="@+id/information_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_round"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="30dp"
            android:text="@{viewModel.wineDetail.w_name}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/information_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_round"
                android:textColor="#990C14"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:textStyle="bold"
                android:text="@{`#`+viewModel.wineDetail.w_type}" />

            <TextView
                android:id="@+id/information_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_round"
                android:textColor="#990C14"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:textStyle="bold"
                android:text="@{`#`+viewModel.wineDetail.w_region}" />

            <TextView
                android:id="@+id/information_region2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_round"
                android:textColor="#990C14"
                android:padding="3dp"
                android:textStyle="bold"
                android:text="@{`#`+viewModel.wineDetail.w_region2}" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="500dp"
            android:layout_width="300dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/white_round">

            <ImageView
                android:id="@+id/information_img"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                imageUrl="@{`https://wine21.speedgabia.com/WINE_MST/TITLE/0152000/W0152589.jpg`}"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/information_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="24dp"
                    android:layout_marginRight="4dp"
                    android:text="@{viewModel.wineDetail.w_price+`원`}" />

                <TextView
                    android:id="@+id/information_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/red_round"
                    android:padding="2dp"
                    android:textSize="14dp"
                    android:text="@{viewModel.wineDetail.w_capacity+`ml`}" />

            </LinearLayout>

            <TextView
                android:id="@+id/information_variety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.wineDetail.w_variety}" />

            <!--당도, 산도-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`당도`+viewModel.wineDetail.w_sweetness}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`산도`+viewModel.wineDetail.w_acidity}" />
            </LinearLayout>

            <!--바디, 타닌-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></LinearLayout>

            <!--알코올, 음용온도-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="알코올" />

                <TextView
                    android:id="@+id/information_alcohol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="@{viewModel.wineDetail.w_alcohol}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="음용온도" />

                <TextView
                    android:id="@+id/information_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="@{viewModel.wineDetail.w_temperature}" />
            </LinearLayout>

            <!--아로마-->
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:id="@+id/information_aroma">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:background="@drawable/red_round"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginRight="12dp"
                    android:text="아로마" />

            </LinearLayout>

            <!--음식 매칭-->
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:id="@+id/information_food">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:background="@drawable/red_round"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_marginRight="12dp"
                    android:text="음식매칭" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</layout>
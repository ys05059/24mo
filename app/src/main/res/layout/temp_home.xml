<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--    관리자메뉴 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/Manager_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/setting_icon"
            android:layout_marginLeft="400dp"
            android:layout_marginTop ="10dp"
            >
        </ImageButton>

    </LinearLayout>

    <!--이미지슬라이드 레이아웃-->
        <!--이미지슬라이드-->
    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="550dp"
        android:background="@drawable/bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        >
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:padding="0dp"
            android:layout_marginTop="30dp"
            app:iss_auto_cycle="true"
            app:iss_delay="0"
            app:iss_period="4000">
        </com.denzcoskun.imageslider.ImageSlider>

    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        >
        <!--와인추천버튼-->
        <Button
            android:id="@+id/Recommend_Wine_btn"
            android:layout_width="188dp"
            android:layout_height="74dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:text="와인 추천"
            android:textColor="@color/white"
            android:textSize="34dp"
            android:layout_marginLeft="30dp"
            />
        <!--상세검색 버튼-->
        <Button
            android:id="@+id/Detail_Search_btn"
            android:layout_width="188dp"
            android:layout_height="74dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:gravity="center"
            android:text="상세 검색"
            android:textColor="@color/white"
            android:textSize="34dp"
            android:layout_marginLeft="15dp"
            />
        <!--바코드 검색버튼-->

        <Fragment.CustomBottomButton
            android:id="@+id/CartListBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            app:customText="0"
            app:customTextColor="@color/wine" />

        <Button
            android:id="@+id/BarCord"
            android:layout_width="188dp"
            android:layout_height="74dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:text="바코드 검색"
            android:textColor="@color/white"
            android:textSize="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"

            />
    </GridLayout>

</LinearLayout>